<?xml version="1.0"?>
<odoo>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <header>
                    <button name="action_property_sold" string="SOLD" type="object" class="oe_stat_button" invisible="state == 'canceled'"/>
                    <button name="action_property_cancel" string="CANCEL" type="object" class="oe_highlight" invisible="state == 'sold'"/>
                    <field name="active" invisible="True"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold" options="{'clickable': '1'}" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" class="mb16"/> 
                        </h1>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color','no_create': True, 'no_create_edit': True, 'no_quick_create': True}"/>
                    </div><br/>
                    <group>
                        <group>
                            <field name="state" readonly="0"/>
                            <field name="property_type_id" options="{'no_open': True, 'no_create': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" invisible="garden == False"/>
                                <field name="garden_orientation" invisible="garden == False"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" readonly="state in ('offer_accepted','sold', 'canceled')">
                            
                            </field>
                        </page>
                        <page string="OtherInfo">
                            <group>
                                <field name="salesman_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- decoration-danger="move_sent_values == 'not_sent'"
    decoration-info="state == 'draft'"
    decoration-muted="state == 'cancel'"
    decoration-warning="state == 'new'"
    decoration-primary="state == 'sent'" -->
    <record id="estate_property_view_tree_custom" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties" decoration-success="state == 'offer_received' or state == 'offer_accepted'" decoration-muted="state == 'sold'">
                <field name="name"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
            </list>
        </field>
    </record>
    <record id="estate_property_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id">
                <templates>
                    <t t-name="card">
                        <field name="name" class="fw-bolder"/>
                        <div>
                            <strong>Expected Price: </strong><field name="expected_price"/>
                        </div>
                        <div>
                            Best Price: <field name="best_price"/>
                        </div>
                        <div invisible="state != 'offer_accepted'">
                            Selling Price: <field name="selling_price"/>
                        </div>
                        <field name="tag_ids" widget="many2many_tags" />
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_estate_property_filter" model="ir.ui.view">
        <field name="name">estate.property</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search">
                <filter string="Available" name="available" domain="[('state', '=', 'new')]" help="Show only new properties by default"/>
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <!--help="Show only those records based on filter condtition"-->
                <field name="living_area" filter_domain="[('living_area','>=',self)]"/>
                <field name="facades"/>
                <field name="create_date"/>
                <field name="property_type_id"/>
                <separator />
                <!-- <filter string="Date Available" name="filter_date_availability" default_period="month"/> -->
                <filter string="Creation Date" name="filter_creation_date" date="create_date" default_period="year"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Postcode" context="{'group_by':'postcode', 'residual_visible':True}" name="postcode"/>
                    <separator orientation="vertical"/>
                    <filter string="Creation Date" context="{'group_by':'create_date:month'}" name="month"/>
                    <separator />
                </group>
                <group expand="1" string="Group By">
                    <filter string="New &amp; Offer Received" name="state" domain="[('state', 'in', ['new', 'offer_received'])]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_available':1}</field>
        <field name="search_view_id" ref="estate.view_estate_property_filter"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define a new Property
          </p><p>
            Use lost reasons to explain why an opportunity is lost.
          </p><p>
            
          </p>
        </field>
    </record>

    <!-- Action estate Property offer  -->
    <record id="action_estate_property_offer" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create an Record
            </p>
        </field>
    </record>
</odoo>